<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateContactActivity"
    android:id="@+id/create_contact_relative_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/details_contact_image"
        android:src="@drawable/cp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/details_contact_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:hint="First name"
        android:textSize="20sp"
        android:layout_marginStart="60dp"
        />

    <EditText
        android:id="@+id/details_contact_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/details_contact_first_name"
        android:layout_marginEnd="100dp"
        android:hint="Last name"
        android:textSize="20sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_contact_first_name"
        android:layout_centerHorizontal="true"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:id="@+id/details_contact_mail"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_contact_mail"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:hint="Phone number"
        android:inputType="phone"
        android:id="@+id/details_contact_phn_num"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_contact_phn_num"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:hint="Second number"
        android:inputType="phone"
        android:id="@+id/details_contact_sec_num"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_contact_sec_num"
        android:layout_marginTop="10dp"
        android:id="@+id/details_contact_group"
        android:textSize="18dp"
        android:hint="Not in groups"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_contact_group"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:id="@+id/btn_save"
        />

</RelativeLayout>