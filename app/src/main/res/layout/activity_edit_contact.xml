<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditContactActivity"
    android:id="@+id/edit_contact_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/update_contact_image"
        android:src="@drawable/cp"
        android:scaleType="centerCrop"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/update_contact_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="129dp"
        android:hint="First name"
        android:textSize="20sp"
        android:layout_marginStart="40dp"
        />

    <EditText
        android:id="@+id/update_contact_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/update_contact_first_name"
        android:layout_marginEnd="100dp"
        android:hint="Last name"
        android:textSize="20sp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_contact_first_name"
        android:layout_centerHorizontal="true"
        android:hint="Mail"
        android:inputType="textEmailAddress"
        android:layout_marginTop="10dp"
        android:id="@+id/update_contact_mail"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_contact_mail"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:hint="Phone number"
        android:inputType="phone"
        android:id="@+id/update_contact_phn_num"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_contact_phn_num"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:hint="Second number"
        android:inputType="phone"
        android:id="@+id/update_contact_sec_num"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:hint="Not in groups"
        android:layout_centerInParent="true"
        android:id="@+id/update_contact_group"
        android:layout_below="@+id/update_contact_sec_num"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/update_contact_first_name"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113dp"
        android:text="Save" />


    <Button
        android:id="@+id/btn_update_cancel"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_update"
        android:layout_toEndOf="@+id/update_contact_phn_num"
        android:text="Cancel" />

</RelativeLayout>